<div class="container">
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-sm-4">
        <div class="card">
          <div class="card-header">
            <%= post.title %>
          </div>
          <div class="card-body">
            <blockquote class="blockquote mb-0">
              <p><%= post.content %></p>
              <footer class="blockquote-footer">Scrubs cast member <cite title="Source Title"><%= post.user.email %></cite></footer>
            </blockquote>
            <a href="#" class="card-link">Card link</a>
            <a href="#" class="card-link">Another link</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
