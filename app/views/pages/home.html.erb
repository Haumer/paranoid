<div class="container">
  <div class="row">
    <% @users.each do |user| %>
      <div class="col-sm-4">
        <div class="card">
          <div class="card-header">
            <%= user.email %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row">
    <% if @deleted_posts.present? %>
      <% @deleted_posts.each do |post| %>
        <div class="col-sm-4">
          <div class="card deleted">
            <div class="card-body">
              <blockquote class="blockquote mb-0">
                <p><%= post.content %></p>
                <footer class="blockquote-footer">Scrubs cast member <cite title="Source Title"><%= post.user.email %></cite></footer>
              </blockquote>
              <%= link_to "hard delete", post_path(post), method: :delete %> -
              <%= link_to "restore", restore_path(post) %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-sm-4">
        <div class="card">
          <div class="card-body">
            <blockquote class="blockquote mb-0">
              <p><%= post.content %></p>
              <footer class="blockquote-footer">Scrubs cast member <cite title="Source Title"><%= post.user.email %></cite></footer>
            </blockquote>
            <%= link_to "soft delete", post_path(post), method: :delete %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
